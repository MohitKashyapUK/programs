{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Blocks specified websites and redirects to 127.0.0.1",
    "permissions": [
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_popup": "options.html"
    }
}